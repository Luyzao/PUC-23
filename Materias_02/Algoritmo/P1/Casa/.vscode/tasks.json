{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Compile active file",
            "command": "${env:HOME}/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-g",
                "-c",
                "${file}",
                "-o",
                "build/${fileBasenameNoExtension}.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: Link objects",
            "command": "${env:HOME}/gcc",
            "args": [
                "-o",
                "bin/${fileBasenameNoExtension}",
                "build/${fileBasenameNoExtension}.o"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "C/C++: Compile active file"
            ],
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
